        h4 College of Arts and Sciences
        div.list-group.d-flex.flex-row.flex-wrap
            each subject_name, index in course_subjects['CLAS']
                div.list-group-item.w-50.list-group-item-action
                    a(href='/subject/' + subject_name["subject"], style="width:250px;")=subject_name['subject'] + " - " + subject_name['name']
        div.row
            h4 School of Engineering and Applied Sciences
            .col-md-6
                each subject_name, index in course_subjects['SEAS']
                    div.row
                    a(href='/subject/' + subject_name["subject"], style="width:250px;")=subject_name['subject'] + " - " + subject_name['name']
